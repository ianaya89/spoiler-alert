{
  "name": "Spoiler Alert",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Prevent tv show possible spoilers adding alert messages in every website",
  "homepage_url": "https://ianaya.com/spoiler-alert",
  "options_ui": {
      "chrome_style": true,
      "page": "settings.html"
   },
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png" },
  "content_scripts": [ {
      "js": [ "js/inject.js" ],
      "matches": [ "*://*/*" ],
      "run_at": "document_end"
   } ],
  "browser_action": {
    "default_title": "SpoilerAlert",
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage"
  ]
}
